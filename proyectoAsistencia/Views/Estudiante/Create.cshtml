@using proyectoAsistencia.Utils
@model proyectoAsistencia.Models.Estudiante
@{
    ViewData["Title"] = "Agregar nuevo estudiante";
}

<div class="card mt-5">
    <div class="card-header bg-gradient bg-success">
        <h3 class="text-secondary text-white text-center">@ViewData["Title"]</h3>
    </div>


    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-4">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="CodigoEstudiante" minlength="10" maxlength="10" class="control-label"></label>
                            <input asp-for="CodigoEstudiante" class="form-control" type="number" />
                            <span asp-validation-for="CodigoEstudiante" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" pattern="[A-Za-z ]+" oninput="this.value = this.value.replace(/[^A-Za-z ]/g, '');   />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" pattern="[A-Za-z ]+" oninput="this.value = this.value.replace(/[^A-Za-z ]/g, ''); />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Promocion" class="control-label"></label>
                            <input asp-for="Promocion" class="form-control" placeholder="2024-1" />
                            <span asp-validation-for="Promocion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-12 col-sm-12 mb-4">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row mb-4">
                        <div class="form-group col-md-4 col-sm-12">
                            <label asp-for="Dni" class="control-label"></label>
                            <input asp-for="Dni" minlength="8" maxlength="8" type="number" class="form-control"></input>
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-12">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" maxlength="12" type="number" class="form-control"></input>
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4 col-sm-12">
                            <label asp-for="Ciclo" class="control-label"></label>
                            <select asp-for="Ciclo" asp-items="@Html.GetEnumSelectList<Ciclo>()" class="form-control"></select>
                            <span asp-validation-for="Ciclo" class="text-danger"></span>
                        </div>
                    </div>
                  
                    <div class="form-group mt-3 text-end">
                        <a asp-action="Index" class="btn btn-info text-white"><i class="fas fa-arrow-alt-circle-left"></i>&nbsp;Regresar</a>
                        <button type="reset" class="btn btn-secondary"> Limpiar <i class="fas fa-undo-alt"></i></button>
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
