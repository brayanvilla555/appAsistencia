@model proyectoAsistencia.Models.Evento

@{
    ViewData["Title"] = "Eliminar evento";
}

<div class="card mt-5">
    <h3 class=" card-header text-center mb-4 bg-warning bg-gradient text-light">@ViewData["Title"]</h3>

    <div class="row justify-content-start card-body  ms-5 p-4">
        <div class="col-md-5 col-sm-12 text-center">

            <img class="w-50 border border-warning" src="https://www.grupocompas.com/wp-content/uploads/2021/12/eventos2022.png" alt="Alternate Text" /> <br />
            <p class="mt-2">@Html.DisplayFor(model => model.Nombre)</p>

        </div>

        <div class="col-md-5 col-sm-12">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaHoraInicio)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaHoraInicio)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.FechaHoraFin)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.FechaHoraFin)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Ubicacion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Ubicacion)
                </dd>
            </dl>

        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-info me-2 text-white"><i class="fas fa-arrow-alt-circle-left text-white"></i>&nbsp;Regresar</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

















 