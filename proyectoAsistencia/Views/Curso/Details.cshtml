@model proyectoAsistencia.Models.Curso

@{
    ViewData["Title"] = "Detalle del curso";
}
<div class="card mt-5">
    <h3 class=" card-header text-center mb-4 bg-success bg-gradient text-light">@ViewData["Title"]</h3>

    <div class="row justify-content-start card-body  ms-5 p-4">
        <div class="col-md-5 col-sm-12 text-center">

            <img class="rounded-circle w-25 border border-warning" src="~/img/curso.jpg" alt="Alternate Text" /> <br />
            <p class="mt-2">@Html.DisplayFor(model => model.Nombre)</p>

        </div>

        <div class="col-md-5 col-sm-12">
            <dl class="row">
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.ciclo)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.ciclo)
                </dd>
                <dt class="col-sm-5">
                    @Html.DisplayNameFor(model => model.Docentes)
                </dt>
                <dd class="col-sm-7">
                    @Html.DisplayFor(model => model.Docentes.Apellido)
                    @Html.DisplayFor(model => model.Docentes.Nombre)
                </dd>
            </dl>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-info me-2 text-white"><i class="fas fa-arrow-alt-circle-left text-white"></i>&nbsp;Regresar</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">Editar&nbsp;<i class="fas fa-pen"></i></a>
        </div>
    </div>

</div>
