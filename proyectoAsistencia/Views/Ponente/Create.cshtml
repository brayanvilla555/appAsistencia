@model proyectoAsistencia.Models.Ponente

@{
    ViewData["Title"] = "Agregar nuevo ponente";
}

<div class="card mt-5">
    <div class="card-header bg-gradient bg-success">
        <h3 class="text-secondary text-white text-center">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mb-4">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" maxlength="70" pattern="[A-Za-z]+" oninput="this.value = this.value.replace(/[^A-Za-z ]/g, '');" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group  col-md-6 col-sm-12">
                            <label asp-for="Apellido" class="control-label"></label>
                            <input asp-for="Apellido" class="form-control" maxlength="70" pattern="[A-Za-z]+" oninput="this.value = this.value.replace(/[^A-Za-z ]/g, '');" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Telefono" class="control-label"></label>
                            <input asp-for="Telefono" class="form-control" type="number" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="form-group col-md-12 col-sm-12">
                            <label asp-for="Especializacion" class="control-label"></label>
                            <input asp-for="Especializacion" class="form-control" />
                            <span asp-validation-for="Especializacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="form-group mt-1 text-end">
                            <a asp-action="Index" class="btn btn-info text-white"><i class="fas fa-arrow-alt-circle-left"></i>&nbsp;Regresar</a>
                            <button type="reset" class="btn btn-secondary"> Limpiar <i class="fas fa-undo-alt"></i></button>
                            <button type="submit" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i>&nbsp;Guardar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>










@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
