@model proyectoAsistencia.Models.Docente

@{
    ViewData["Title"] = "Información del docente";
}

<div class="card mt-5">
    <h3 class=" card-header text-center mb-4 bg-success bg-gradient text-light">@ViewData["Title"]</h3>

    <div class="row justify-content-start card-body  ms-5 p-4">
        <div class="col-md-5 col-sm-12 text-center">

            <img class="rounded-circle w-25" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png" alt="Alternate Text" /> <br />
            <p class="mt-2">@Html.DisplayFor(model => model.Nombre)</p>

        </div>

        <div class="col-md-5 col-sm-12">
            <dl class="row">
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-lg-4">
                    @Html.DisplayNameFor(model => model.FechaAcceso)
                </dt>
                <dd class="col-lg-8">
                    @Html.DisplayFor(model => model.FechaAcceso)
                </dd>

            </dl>
        </div>

        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-info me-2 text-white"><i class="fas fa-arrow-alt-circle-left text-white"></i>&nbsp;Regresar</a>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">Editar&nbsp;<i class="fas fa-pen"></i></a>
        </div>
    </div>

</div>